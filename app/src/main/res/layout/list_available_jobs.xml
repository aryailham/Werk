<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:background="@drawable/filled_box_white"
    android:elevation="5dp">
    <GridLayout
        android:id="@+id/rv_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/logo_gojek"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Junior Programmer"
                    android:textColor="@color/brown"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT. Karya Anak Bangsa"
                    android:textColor="@color/darkGrey"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="840+ Applicants"
                android:textSize="10sp"
                android:paddingStart="50dp"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:id="@+id/applicant_count"/>
        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/company_address"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Pasaraya Blok M, Kebayoran Baru, Jakarta Selatan"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/darkGrey"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/job_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 9.500.000 - 11.000.000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/brown" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary range"
                android:textSize="10sp"
                android:textColor="@color/darkGrey"
                android:textStyle="bold"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>