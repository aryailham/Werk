<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_history_job"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >

    <ImageView
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_person_black_24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Analyst"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT. Karya Anak Bangsa"
            android:textStyle="bold"
            android:textSize="15.2sp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 January 2020"
            android:textStyle="bold"
            android:textSize="15.2sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_apply_status"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="Accepted"
            android:background="@drawable/bg_status_waiting"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

    </LinearLayout>

</LinearLayout>